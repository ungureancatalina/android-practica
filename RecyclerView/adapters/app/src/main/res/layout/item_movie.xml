<?xml version="1.0" encoding="utf-8"?>
<!-- layoutul pentru un singur item (rand) din lista -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#BD9494"
    card_view:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#591B1B"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie title"
            android:textColor="#F0E7E7"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"/>

        <TextView
            android:id="@+id/tvGenreYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Genre • 1994"
            android:textColor="#DCCBCB"
            android:textSize="14sp"
            android:alpha="0.9"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="⭐ 9.3"
            android:textColor="#FFE6A7"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>