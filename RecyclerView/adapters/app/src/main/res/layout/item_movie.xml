<?xml version="1.0" encoding="utf-8"?>
<!-- layoutul pentru un singur item (rand) din lista -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#BD9494"
    card_view:cardCornerRadius="12dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="#591B1B"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="356dp"
            android:layout_height="50dp"
            android:foregroundTint="#2A1010"
            android:text="Movie title"
            android:textColor="#CEBABA"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenreYear"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="4dp"
            android:text="Genre • 1994"
            android:textColor="#CEBABA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="⭐ 9.3"
            android:textColor="#CEBABA"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>