<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Practica">

        <!-- Activitatea principalÄƒ (launcher) -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Practica">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activitate pentru Welcome screen -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false" />

        <!-- Activitate pentru Parity screen -->
        <activity
            android:name=".activities.ParityActivity"
            android:exported="false" />

        <!-- Activitate pentru Bmi screen -->
        <activity
            android:name=".activities.BmiActivity"
            android:exported="false" />

    </application>

</manifest>
